{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "lib": [
            "ES2022"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "types": ["node"],
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "@teledrive/shared-types": [
                "./packages/shared-types/dist"
            ],
            "@teledrive/shared-utils": [
                "./packages/shared-utils/dist"
            ],
            "@teledrive/shared-config": [
                "./packages/shared-config/dist"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}